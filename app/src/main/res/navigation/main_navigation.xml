<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.yogadarma.awesomeapp.presentation.home.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_detailFragment"
            app:destination="@id/detailFragment"
            app:enterAnim="@anim/from_right_anim"
            app:exitAnim="@anim/to_left_anim"
            app:popEnterAnim="@anim/from_left_anim"
            app:popExitAnim="@anim/to_right_anim" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.yogadarma.awesomeapp.presentation.detail.DetailFragment"
        android:label="@string/photo_detail_text"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="photoId"
            app:argType="integer" />
    </fragment>
</navigation>